{
  "manifest_version": 3,
  "name": "Clify (Formaly Zap)",
  "version": "7.0.0",
  "default_locale": "en",
  "description": "Clify: Tired of YouTube distractions? Automatically hide shorts, clickbait, and unwanted videos with intelligent filtering and one-click blocking.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "notifications",
    "management"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "https://nzkuznagjyjqzyihcpno.supabase.co/*",
    "https://api.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "dashboard.html",
  "action": {
    "default_title": "Clify Dashboard",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}